<% var title = 'Edit - Pictionnary' %>
<% include head %>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Pictionnary</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="/home">Retour</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>
<div class="container" style="margin-top:99px;">
    <div class="col-md-offset-2 col-md-8" >
        <form class="inscription" action="/editConfirm" method="post" name="inscription">

            <% if(succes.length != 0) { %>
            <div class="alert alert-success" role="alert">
                <p class="required_notification"><%= succes %></p>
            </div>
            <% } %>

            <div class="form-group">
                <label for="email">Email *</label>
                <input type="email" <% if(typeof data.email != "undefined"){ %> value="<%= data.email %>" <% }%> class="form-control" id="email" name="email" autofocus placeholder="exemple@mail.fr" required>
            </div>

            <div class="form-group">
                <label for="nom">Nom</label>
                <input type="text" <% if(typeof data.nom != "undefined"){ %> value="<%= data.nom %>" <% }%>  class="form-control" id="nom" name="nom" placeholder="Nom" />
            </div>

            <div class="form-group">
                <label for="prenom">Prénom *</label>
                <input type="text" <% if(typeof data.prenom != "undefined"){ %> value="<%= data.prenom %>" <% }%> class="form-control" id="prenom" name="prenom" placeholder="Prénom" required />
            </div>

            <div class="form-group">
                <label for="tel">Téléphone</label>
                <input type="tel" <% if(typeof data.tel != "undefined"){ %> value="<%= data.tel %>" <% }%> class="form-control" id="tel" name="tel" placeholder="0622155669" pattern="[0-9]{10}" />
            </div>

            <div class="form-group">
                <label for="sw">Site Web</label>
                <input type="url" <% if(typeof data.website != "undefined"){ %> value="<%= data.website %>" <% }%> class="form-control" id="sw" name="sw" placeholder="www.monsite.com" />
            </div>

            <label for="sexe">Sexe</label>
            <div class="radio">
                <label><input type="radio" name="sexe" id="radios1" value="H"  <% if(data.sexe == "H"){ %> checked <% }%>/> Homme </label>
            </div>
            <div class="radio">
                <label><input type="radio" name="sexe" id="radios1" value="F"  <% if(data.sexe == "F"){ %> checked <% }%>/> Femme </label>
            </div>

            <div class="form-group">
                <label for="date">Date naissance *</label>
                <input type="date" <% if(typeof data.birthdate != "undefined"){ %> value="<%= data.birthdate %>" <% }%> min="01/01/1900" class="form-control" id="date" name="anniv" placeholder="DD/MM/YYYY" onchange="calculAge()" required />
            </div>

            <div class="form-group">
                <label for="age">Age</label>
                <input type="number" class="form-control" id="age" name="age" placeholder="Age calculé en fonction de la date de naissance" disabled />
            </div>

            <div class="form-group">
                <label for="ville">Ville</label>
                <input type="text" <% if(typeof data.ville != "undefined"){ %> value="<%= data.ville %>" <% }%> class="form-control" id="ville" name="ville" placeholder="Nice" />
            </div>

            <div class="form-group">
                <label for="password">Mot de passe * </label>
                <input type="password" class="form-control" id="password" name="password" <% if(typeof data.password != "undefined"){ %> value="<%= data.password %>" <% }%> placeholder="Mot de passe" pattern="[a-zA-Z0-9]{4,8}" required />
                <span class="form_hint">De 6 à 8 caractères alphanumériques.</span>
            </div>

            <div class="col-md-offset-4 col-md-3">
                <button type="submit" class="btn btn-lg btn-default">Mettre à jour</button>
            </div>
        </form>
    </div>
    <div class="col-md-offset-4 col-md-3"><br/><br/></div>
</div>
<% include foot %>