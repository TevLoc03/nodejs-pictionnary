<% var title = 'Administration - Pictionnary' %>
<% include head %>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Pictionnary</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Accueil</a></li>
                <li ><a href="/home">Retour</a></li>
                <li><a href="/signout">Deconnexion</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>
<div class="container" style="margin-top:100px;">
    <div class="row">
        <% if(users.length != 0) { %>
        <div class="col-xs-offset-2 col-xs-8">
            <div class="col-xs-12" id="profil"><h2>Mes dessins</h2></div>
            <div class="panel panel-default col-xs-12">
                <div class="table-responsive">
                    <table class="table ">
                        <tr>
                            <td >N*</td>
                            <td >Nom</td>
                            <td >Email</td>
                            <td >Voir</td>
                            <td >Supprimer</td>
                        <tr>
                            <% for(var i = 0 ; i < users.length; i++) {%>
                        <tr>
                            <td ><%= users[i].id %></td>
                            <td ><%= users[i].prenom %></td>
                            <td ><%= users[i].email %></td>
                            <td >
                                <form method="post" action="#">
                                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-eye-open"></i></button>
                                    <input type="hidden" name="id_view_user" value="<%= users[i].id %>" />
                            </td>
                            <td >
                                <form method="post" action="/deleteUsers">
                                    <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></button>
                                    <input type="hidden" name="id_delete_user" value="<%= users[i].id %>" />
                                </form>
                            </td>
                        </tr>

                        <% } %>
                    </table>
                </div>
            </div>
        </div>
        <% }%>
    </div>
</div>
<% include foot %>